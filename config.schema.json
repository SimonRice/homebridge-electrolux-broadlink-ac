{
	"pluginAlias": "ElectroluxBroadlinkAC",
	"pluginType": "platform",
	"singular": true,
	"schema": {
		"type": "object",
		"properties": {
			"name": {
				"title": "Name",
				"type": "string",
				"required": true,
				"default": "Electrolux Broadlink AC Platform"
			},
			"minRequestFrequency": {
				"title": "Minimum Request Frequency",
				"type": "integer",
				"required": false,
				"default": 200,
				"minimum": 0,
				"maximum": 1000,
				"description": "Maximum time to cache AC status data"
			},
			"auto": {
				"title": "Auto Switch",
				"type": "boolean",
				"required": false,
				"description": "Expose the Auto Mode switch?"
			},
			"selfClean": {
				"title": "Self Clean Switch",
				"type": "boolean",
				"required": false,
				"description": "Expose the Self Clean switch?"
			},
			"display": {
				"title": "LED Display Switch",
				"type": "boolean",
				"required": false,
				"description": "Expose LED Display/Beep switch?"
			},
			"fanSwing": {
				"title": "Exrtra Fan Swing Switch",
				"type": "boolean",
				"required": false,
				"description": "Expose a separate Fan Swing switch? (in addition to the native support)"
			},
			"quietAuto": {
				"title": "Quiet Auto Switch",
				"type": "boolean",
				"required": false,
				"description": "Expose the Quiet Auto Mode switch?"
			}

		}
	}
}